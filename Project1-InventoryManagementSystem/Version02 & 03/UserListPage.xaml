<Page x:Class="VP_2.UserListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="User List">
    <Grid Background="#D2B48C">
        <!-- Header Section -->
        <TextBlock Text="User Details" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>

        <!-- DataGrid Section -->
        <DataGrid x:Name="UserDataGrid" AutoGenerateColumns="True"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="10,50,10,10" IsReadOnly="True"
                  AlternationCount="2"
                  AlternatingRowBackground="#F5F5F5"
                  Background="White"/>
    </Grid>
</Page>
